# ---------- NumPy Part: Statistical Analysis ----------

import pandas as pd
import numpy as np

# Load the dataset again
df = pd.read_csv("Sales.csv")

# Ensure 'Total Sales' column exists
df['Total Sales'] = df['Quantity'] * df['Price']

# Convert Total Sales column into NumPy array
sales = df['Total Sales'].to_numpy()

# Perform statistical calculations
print("Mean of Total Sales:", np.mean(sales))
print("Median of Total Sales:", np.median(sales))
print("Standard Deviation of Total Sales:", np.std(sales))
