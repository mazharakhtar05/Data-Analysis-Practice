CREATE TABLE Weather (
    Date TEXT,
    City TEXT,
    Temperature REAL,
    Rainfall REAL
);

-- 1) Find the hottest day
SELECT * FROM Weather ORDER BY Temperature DESC LIMIT 1;

-- 2) Find the coldest day
SELECT * FROM Weather ORDER BY Temperature ASC LIMIT 1;

-- 3) Average rainfall per city
SELECT City, AVG(Rainfall) as Avg_Rainfall
FROM Weather
GROUP BY City;
